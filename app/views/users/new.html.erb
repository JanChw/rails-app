<% provide :title, 'Register' %>

  <div class="container">
    <div class="row">
      <div class="col-8 offset-2">
        <h4>Register</h4>
        <hr>
        <%= render 'shared/errors' %>
        <%= form_for(@user) do |f|%>
          <div class="form-group row">
            <div class="col-3">
              <%= f.label :name, class: 'col-form-label'%>
            </div>
            <div class="col-9">
              <%= f.text_field :name, class: 'form-control has-error', placeholder: 'Enter your name'%>
            </div>
          </div>

          <div class="form-group row">
            <div class="col-3">
              <%= f.label :email, class: 'col-form-label'%>
            </div>
            <div class="col-9">
              <%= f.email_field :email, class: 'form-control', placeholder: 'Enter your email'%>
            </div>
          </div>

          <div class="form-group row">
            <div class="col-3">
              <%= f.label :password, class: 'col-form-label'%>
            </div>
            <div class="col-9">
              <%= f.password_field :password, class: 'form-control', placeholder: 'Enter your password'%>
            </div>
          </div>

          <div class="form-group row">
            <div class="col-3">
              <%= f.label :password_confirmation, 'Confirmation',class: 'col-form-label'%>
            </div>
            <div class="col-9">
              <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'Enter your password again'%>
            </div>
          </div>
          <div class="form-group row">
            <div class="col-9 offset-3">
              <%= f.submit 'Create my account', class: 'btn btn-primary col' %>
            </div>
          </div>
          <% end %>
      </div>
    </div>
  </div>
  